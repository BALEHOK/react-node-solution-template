{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string",
      "DOM"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "strict": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~common/*": [
        "../common/*"
      ]
    },
    "outDir": "build",
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
    ]
  },
  "include": [
    "src",
    "../common"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
